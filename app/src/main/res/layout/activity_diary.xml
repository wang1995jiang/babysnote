<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_all"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/mainViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/fragment_box"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/tab_bg"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/item_all_diary"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/all_image"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/diary_1" />
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/item_all_diary_open"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="日记本"
                android:textColor="#1fefa8"
                android:textSize="15dp" />
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/item_all_diary_close"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="日记本"
                android:textColor="#787878"
                android:textSize="15dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/item_collection_diary">
            <ImageView
                android:layout_alignParentTop="true"
                android:id="@+id/collection_image"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/collection"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/item_collection_diary_open"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="星标日记"
                android:textColor="#1fefa8"
                android:textSize="15dp" />
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/item_collection_diary_close"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="星标日记"
                android:textColor="#787878"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/item_create_diray">
            <ImageView
                android:layout_alignParentTop="true"
                android:id="@+id/write_image"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/write"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/item_create_diray_open"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="新建日记"
                android:textColor="#1fefa8"
                android:textSize="15dp" />
            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/item_create_diray_close"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="新建日记"
                android:textColor="#787878"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/delete_operation_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/number_select_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选中：1个"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:id="@+id/delete_diary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/delete_duary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/all_select_diary"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/all_select"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全选"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cancel_select_diary"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icn_delete"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>