<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_all"/>
    <RelativeLayout
        android:id="@+id/animation_type"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="导航栏动画"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/animation_show_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="示例"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icn_next"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <include
        layout="@layout/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/text_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="开启背景音乐"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"/>
        <Switch
            android:id="@+id/switch_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <include
        layout="@layout/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/text_encryption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="开启隐私保护"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"/>
        <Switch
            android:id="@+id/switch_encryption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <include
        layout="@layout/line"/>
    <RelativeLayout
        android:id="@+id/show_music"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/choice_music_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="音乐标题"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/music_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="更换"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#00a6ff"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/delete_all_diary"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ff6565"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="删除所有日记"
        android:gravity="center"
        android:textColor="#ffffff"/>
</LinearLayout>