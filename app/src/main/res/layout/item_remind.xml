<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/item_rela_remind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/item_remind_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="闹钟"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/item_remindF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="只响一次"
                    android:textColor="#838383"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/stop_ringtone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="正在响铃,点击停止"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:id="@+id/show_remind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" >
                    <TextView
                        android:id="@+id/item_remind_timeType"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="上午"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/item_remind_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="12:00"
                        android:textSize="40sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/clock_or_remind"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="将会提醒"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/cancel_remind"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="取消"
                android:gravity="center"
                android:background="#ff0000"
                android:textColor="#fff"/>

        </LinearLayout>
    </HorizontalScrollView>
    <include
        layout="@layout/line"/>
</LinearLayout>
